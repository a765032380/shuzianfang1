<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <RelativeLayout
                android:id="@+id/rl_xiaoqugonggao_xiangqing_fanhui"
                android:layout_width="40dp"
                android:layout_height="64dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/d_btn_join"
                    android:layout_gravity="center" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息详情"
                android:textColor="#333333"
                android:layout_centerInParent="true"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_xiaoqugonggao_xiangqing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智社区APP重要升级通知"
            android:textColor="#333333"
            android:textSize="18sp"
           />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_xiaoqugonggao_xiangqing_jinji"
            android:layout_width="40dp"
            android:layout_height="17dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/a_m_icon_jinji" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_gone_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_xiaoqugonggao_xiangqing_gonggaoxiangqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尊敬的业主：
         尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业主：尊敬的业"
            android:textColor="#333333"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/tv_xiaoqugonggao_xiangqing_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017.01.01"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_xiaoqugonggao_xiangqing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00:00"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_xiaoqugonggao_xiangqing_wuyeguanlichu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="物业管理处"
            android:textColor="#909090"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

     <TextView
         android:id="@+id/tv_jiaofeitongdao"
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:layout_gravity="bottom"
         android:text="缴费通道" 
         android:gravity="center"
         android:textColor="#ffffff"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_marginTop="50dp"
         android:layout_marginBottom="15dp"
         android:background="@drawable/conners_5dp_blue"/>
 </LinearLayout>
    </ScrollView>
</LinearLayout>
