<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:id="@+id/iv_yijianfankui_fanhui"
            android:layout_width="40dp"
            android:layout_height="64dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_height="20dp"
                android:src="@drawable/a_btn_join"
                android:layout_gravity="center"/>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="#333333"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:layout_marginTop="3dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="意见反馈"
        android:layout_marginLeft="15dp"
       
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
       />
      
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#f7f7f7"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <EditText
        android:id="@+id/et_fankuiyijian"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="left"
        android:background="@null"
        android:textSize="15sp"
        android:hint="请输入您的反馈意见" />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:textSize="15sp" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="#f7f7f7"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
    <EditText
        android:id="@+id/et_fankuiyijian_lianxifangshi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="left|center_vertical"
        android:background="@null"   
        android:textSize="15sp"
        android:hint="请输入您的联系方式" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加图片"          
            android:layout_gravity="center_vertical"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:visibility="visible">
<LinearLayout
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:orientation="horizontal"
android:gravity="center_vertical"
    android:layout_marginLeft="15dp">

    <ImageView
        android:id="@+id/iv_yijianfankui_tianjiatupian1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/i_icon_dianjiatupian" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_delete1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="-10dp"
        android:layout_gravity="top"
        android:layout_marginTop="5dp"
        android:src="@drawable/e_e_btn_delete" />
    
</LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_yijianfankui_tianjiatupian2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/i_icon_dianjiatupian" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_delete2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-10dp"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:src="@drawable/e_e_btn_delete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
           >

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_yijianfankui_tianjiatupian3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/i_icon_dianjiatupian" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_delete3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-10dp"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:src="@drawable/e_e_btn_delete" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
           >

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_yijianfankui_tianjiatupian4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/i_icon_dianjiatupian" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_delete4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-10dp"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:src="@drawable/e_e_btn_delete" />

        </LinearLayout>

  

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/iv_yijianfankui_tijiaofankui"
            android:layout_width="340dp"
            android:layout_height="51dp"
            android:background="@drawable/e_e_btn_go_pre"
            />
    </LinearLayout>
    

</LinearLayout>
