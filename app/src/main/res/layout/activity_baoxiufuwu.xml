<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/iv_baoxiufuwu_fanhui"
                    android:layout_width="40dp"
                    android:layout_height="44dp">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/e_btn_join" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    android:text="报修服务"
                    android:textColor="#323232"
                    android:textSize="17sp" />

                <RelativeLayout
                    android:id="@+id/rl_lishibaoxiu"
                    android:layout_width="80dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:text="历史报修"
                        android:textColor="#323232"
                        android:textSize="15sp" />

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="维修物品"
                    android:textColor="#323232"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#f7f7f7"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_fankuiyijian"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入您要报修的物品"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="维修问题描述"
                    android:textColor="#323232"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#f7f7f7">

                <EditText
                    android:id="@+id/et_fankuiyijian2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请描述您要报修物品的问题"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="联系方式"
                    android:textColor="#323232"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="#f7f7f7">

                <EditText
                    android:id="@+id/et_fankuiyijian_lianxifangshi"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:hint="请输入您的联系方式"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="添加图片"
                    android:textColor="#323232"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <LinearLayout  
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_yijianfankui_tianjiatupian1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/i_icon_dianjiatupian" />

                    <ImageView
                        android:id="@+id/iv_delete1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/b_a_b_btn_delete"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_yijianfankui_tianjiatupian2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/i_icon_dianjiatupian"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_delete2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/b_a_b_btn_delete"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_yijianfankui_tianjiatupian3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/i_icon_dianjiatupian"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_delete3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/b_a_b_btn_delete"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_yijianfankui_tianjiatupian4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/i_icon_dianjiatupian"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_delete4"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="top"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/b_a_b_btn_delete"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_yijianfankui_tijiaofankui"
                    android:layout_width="340dp"
                    android:layout_height="51dp"
                    android:background="@drawable/b_a_b_btn_go" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
