<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4183FF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#4183FF">

            <RelativeLayout
                android:id="@+id/rl_fuwutiaokuan_fanhui"
                android:layout_width="40dp"
                android:layout_height="64dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/c_icon_fanhui" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="服务条款"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:id="@+id/ll_xuanzexiaoqu1_cance"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lv_fanhui"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/tv_xuanzexiaoqu1_cance"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/d_btn_join" />
            </LinearLayout>



            <TextView
                android:layout_marginLeft="35dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:text="服务条款"
                android:textColor="#333333"
                android:textSize="17sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_xuanzexiaoqu1_add"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <ScrollView
        android:id="@+id/sv_fuwutiaokuan_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"

     android:layout_marginBottom="20dp"
        android:orientation="vertical">
    

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/tv_fuwutiaokuan_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:textColor="#888888" />
    </ScrollView>

</LinearLayout>
